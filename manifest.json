{
  "manifest_version": 3,
  "name": "Window Tiler",
  "version": "0.53",
  "description": "Tile your windows with a single click.",
  "background": {
    "service_worker": "service_worker.js",
    "type": "module"
  },
  "action": {
    "default_title": "Click to tile your windows",
    "default_icon": {
      "19": "icon_19.png"
    }
  },
  "icons": {
    "32": "icon_32.png",
    "48": "icon_48.png",
    "72": "icon_72.png",
    "128": "icon_128.png"
  },
  "permissions": [
    "system.display"
  ]
}
